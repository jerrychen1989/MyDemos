     </parameter>
   </appender-->
    <root>
      <level value="DEBUG" />
      <appender-ref ref="LogFileAppender" />
      <appender-ref ref="ConsoleAppender" />
      <!--appender-ref ref="DBAppender_SQL" /-->
    </root>
  </log4net>
</configuration>
